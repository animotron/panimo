# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index

GET         /admin/                controllers.Adminka.index

GET         /users                 controllers.Application.users
GET         /play-help             controllers.Application.playHelp
GET         /ws                    controllers.Users.ws

GET         /position/:id          controllers.Front.position(id:String)

POST        /users/login           controllers.Users.login
POST        /users/register        controllers.Users.register

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)

GET         /lot/:id/               controllers.Application.lot(id:String)
GET         /lot/:id/*file          controllers.Application.res(id, file)

GET /lot/all    controllers.Application.allPoints