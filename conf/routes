# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index
GET         /search                controllers.Application.search

GET         /users                 controllers.Application.users
GET         /ws                    controllers.Users.ws

POST        /users/login           controllers.Users.login
POST        /users/register        controllers.Users.register

POST        /lot/add               controllers.Lot.add
GET         /lot/:id               controllers.Lot.lot(id:String)
GET         /lot/:id/edit          controllers.Lot.edit(id:String)
POST        /lot/:id/store         controllers.Lot.store(id:String)
POST        /lot/:id/upload        controllers.Lot.upload(id:String)
GET         /lot/*file             controllers.Assets.at(path="/lot", file)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)


